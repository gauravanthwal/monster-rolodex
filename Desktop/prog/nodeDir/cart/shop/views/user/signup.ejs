<%- include('../partials/header.ejs') %>
    <div class="signup" style="max-width: 500px;margin: 50px auto">
        <h1 class="text-center">Sign Up</h1>
        <% if(errorMessage){ %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= errorMessage%>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <form action="/user/signup" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control mb-2" value="<% typeof email !='undefined' ? email :'' %>" type="text" name="name" id="name">
            </div>
            <div class="form-group">
                <label for="email">E-mail</label>
                <input class="form-control mb-2" value="<% typeof email !='undefined' ? email :'' %>" type="email" name="email" id="email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control mb-3"  type="password" value="<% typeof password != 'undefined' ? password :''%>" name="password" id="password" placeholder="must have at least 6 characters">
            </div>
            
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
        <p>Already have an Account?<a href="/user/signin"> SignIn</a></p>
   </div>
<%- include('../partials/end.ejs') %>